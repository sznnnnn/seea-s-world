/* 主题色 */
page {
  --primary-color: #1989fa;
  --warning-color: #ff976a;
  --danger-color: #ee0a24;
  --text-color: #333333;
  --text-color-secondary: #666666;
  --text-color-light: #999999;
  --background-color: #f7f8fa;
  --border-color: #eeeeee;
}

/* 字体大小 */
page {
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
}

/* 间距 */
page {
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
}

/* 圆角 */
page {
  --radius-sm: 4rpx;
  --radius-md: 8rpx;
  --radius-lg: 16rpx;
}

/* 阴影 */
page {
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
} 