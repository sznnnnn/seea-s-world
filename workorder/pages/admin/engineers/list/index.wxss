/* pages/admin/engineers/list/index.wxss */
.container {
  padding: var(--spacing-md);
  background: #f7f8fa;
  min-height: 100vh;
}

.filter-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #f7f8fa;
  padding-bottom: var(--spacing-md);
}

.search {
  margin-bottom: var(--spacing-sm);
}

.engineer-list {
  margin-top: var(--spacing-md);
}

.engineer-card {
  background: #fff;
  border-radius: 8rpx;
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.engineer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-sm);
  border-bottom: 2rpx solid #f5f5f5;
}

.engineer-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.engineer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.engineer-level {
  font-size: 24rpx;
  color: #666;
  background: #f7f8fa;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.engineer-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.engineer-status.free {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.engineer-status.busy {
  background: rgba(245, 34, 45, 0.1);
  color: #f5222d;
}

.engineer-status.leave {
  background: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.engineer-status.rest {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.engineer-body {
  margin-bottom: var(--spacing-md);
}

.info-item {
  margin-bottom: var(--spacing-sm);
  font-size: 28rpx;
  line-height: 1.6;
}

.label {
  color: #666;
  margin-right: var(--spacing-xs);
  display: inline-block;
  width: 140rpx;
}

.value {
  color: #333;
}

.phone {
  color: #1989fa;
  cursor: pointer;
}

.phone:active {
  opacity: 0.7;
}

.skill-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-top: var(--spacing-xs);
}

.skill-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  background: #f7f8fa;
  color: #666;
  border-radius: 4rpx;
  border: 2rpx solid #eee;
}

.engineer-footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-lg);
  padding-top: var(--spacing-md);
  border-top: 2rpx solid #f5f5f5;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: var(--spacing-xl) 0;
}

/* 按钮样式优化 */
.van-button--default {
  border-color: #eee !important;
}

.van-button--info {
  background: #f7f8fa !important;
  border-color: #eee !important;
  color: #666 !important;
}

.van-button--primary {
  background: #1989fa !important;
  border-color: #1989fa !important;
}