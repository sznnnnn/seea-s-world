/* pages/login/login.wxss */
.container {
  padding: var(--spacing-lg);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f7f8fa;
}

.login-header {
  text-align: center;
  margin: 100rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: var(--spacing-md);
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: var(--spacing-xs);
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.login-form {
  width: 100%;
  background: #fff;
  border-radius: 8rpx;
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: var(--spacing-md);
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: var(--spacing-xs);
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f7f8fa;
  border-radius: 4rpx;
  padding: 0 var(--spacing-md);
  font-size: 28rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1989fa;
  color: #fff;
  font-size: 32rpx;
  border-radius: 4rpx;
  margin-top: var(--spacing-lg);
}

.login-btn:active {
  opacity: 0.9;
}

.footer {
  margin-top: auto;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}