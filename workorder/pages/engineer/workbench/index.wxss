.container {
  padding: var(--spacing-sm);
  background: var(--background);
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: var(--spacing-sm);
  background: var(--background);
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--border-radius-md);
  box-shadow: var(--card-shadow);
}

.search-input {
  flex: 1;
  margin-left: var(--spacing-sm);
  font-size: 28rpx;
  color: var(--text-main);
}

/* 工单列表 */
.section {
  background: #fff;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-main);
}

.section-count {
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--background);
  padding: 4rpx 16rpx;
  border-radius: var(--border-radius-sm);
}

/* 工单卡片样式 */
.order-item {
  background: #fff;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-sm) var(--spacing-md);
  margin-bottom: var(--spacing-sm);
  box-shadow: var(--card-shadow);
}

.order-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.order-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.order-time {
  font-size: 26rpx;
  color: var(--primary-color);
  background: rgba(25, 137, 250, 0.1);
  padding: 2rpx 12rpx;
  border-radius: var(--border-radius-sm);
}

.customer {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

.distance {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.order-brief {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.divider {
  color: #eee;
}

.info-row {
  display: flex;
  margin-bottom: var(--spacing-xs);
  font-size: 26rpx;
}

.label {
  color: var(--text-secondary);
  width: 120rpx;
  flex-shrink: 0;
}

.location-wrap {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-btn {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(25, 137, 250, 0.1);
  padding: 4rpx 16rpx;
  border-radius: var(--border-radius-sm);
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 2rpx solid var(--border-color);
}

.order-actions .btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  margin: 0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.section-icon {
  font-size: 32rpx;
}

/* 今日工单区域 */
.today-section {
  border-left: 8rpx solid var(--primary-color);
}

/* 可抢工单区域 */
.grab-section {
  border-left: 8rpx solid var(--warning-color);
}

/* 查看全部链接 */
.view-all {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.view-all:active {
  opacity: 0.7;
}

/* 快捷功能区域 */
.quick-actions {
  display: flex;
  margin-top: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

/* 统一使用蓝色渐变 */
.action-item {
  flex: 1;
  background: linear-gradient(135deg, rgba(25, 137, 250, 0.05), rgba(57, 187, 255, 0.1));
  border: 1rpx solid rgba(25, 137, 250, 0.15);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
  box-shadow: var(--card-shadow);
  transition: all 0.3s ease;
}

.action-item:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.action-icon {
  font-size: 56rpx;
  line-height: 1;
  font-weight: bold;
}

.action-text {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

/* 抢单按钮样式 */
.grab-btn {
  min-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #ff9800;
  color: #fff;
  font-size: 26rpx;
  border-radius: var(--border-radius-sm);
  padding: 0 24rpx;
  margin: 0;
  transition: opacity 0.3s ease;
}

.grab-btn:active {
  opacity: 0.9;
} 