/* pages/engineer/order-add/index.wxss */
.container {
  padding: var(--spacing-md);
  background: var(--background);
  min-height: 100vh;
}

.form-group {
  background: #fff;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.form-item {
  margin-bottom: var(--spacing-md);
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: var(--spacing-xs);
  font-weight: 500;
}

.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: var(--background);
  border-radius: var(--border-radius-md);
  padding: 0 var(--spacing-md);
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: var(--background);
  border-radius: var(--border-radius-md);
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-view {
  width: 100%;
  height: 88rpx;
  background: var(--background);
  border-radius: var(--border-radius-md);
  padding: 0 var(--spacing-md);
  font-size: 28rpx;
  line-height: 88rpx;
  color: var(--text-main);
}

.picker-view.placeholder {
  color: var(--text-placeholder);
}

.location-input {
  display: flex;
  gap: var(--spacing-sm);
}

.location-input .form-input {
  flex: 1;
}

.location-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 0 var(--spacing-md);
  background: var(--primary-color);
  border-radius: var(--border-radius-md);
  color: #fff;
  font-size: 26rpx;
}

.location-icon {
  font-size: 28rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: var(--border-radius-lg);
  margin: 0;
}

.submit-btn:active {
  opacity: 0.9;
}