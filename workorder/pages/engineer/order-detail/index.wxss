.container {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.order-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 32rpx;
  font-weight: 500;
}

.status {
  font-size: 28rpx;
}

.status.pending {
  color: #ff4d4f;
}

.status.processing {
  color: #1989fa;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label {
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
} 