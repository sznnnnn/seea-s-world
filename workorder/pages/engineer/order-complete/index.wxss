.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.optional {
  font-size: 24rpx;
  color: #999;
}

.required::after {
  content: ' *';
  color: #ff4d4f;
}

.form-input,
.form-textarea,
.picker-wrap,
.info-text,
.engineers-text,
.location-wrap {
  width: 100%;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input {
  height: 80rpx;
  padding: 0 20rpx;
}

.form-textarea {
  height: 160rpx;
}

.model-no-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.model-input, .no-input {
  flex: 1;
}

.separator {
  color: #999;
}

.photo-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.photo-item {
  position: relative;
  padding-bottom: 100%;
}

.photo-item image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.photo-upload {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding-bottom: 100%;
  position: relative;
}

.photo-upload icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #1989fa;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin: 0;
}

.placeholder {
  color: #999;
}

.picker-arrow {
  color: #999;
}

.refresh-btn {
  color: #1989fa;
  font-size: 26rpx;
}

.photo-card {
  background: #f7f8fa;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.photo-preview {
  width: 100%;
  height: 400rpx;
  display: block;
}

.photo-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  padding: 16rpx 20rpx;
}

.photo-time,
.photo-location {
  display: block;
  color: #fff;
  font-size: 24rpx;
  line-height: 1.6;
}

.photo-placeholder {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.photo-placeholder-icon {
  font-size: 32rpx;
  color: #999;
}

.photo-placeholder-text {
  color: #999;
  font-size: 28rpx;
} 