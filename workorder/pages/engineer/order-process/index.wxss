.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.info-card {
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label {
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.form-label text {
  font-size: 28rpx;
  color: #333;
}

.optional {
  font-size: 24rpx !important;
  color: #999 !important;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.parts-list {
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.part-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.part-input {
  flex: 1;
  height: 72rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.add-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #fff;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #1989fa;
  margin: 0;
}

.photo-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.photo-item image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.remove-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #fff;
  border-radius: 50%;
}

.photo-upload {
  width: 100%;
  padding-bottom: 100%;
  background: #f7f8fa;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.photo-upload icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin: 0;
}

.save-btn {
  background: #fff;
  color: #1989fa;
  border: 2rpx solid #1989fa;
}

.complete-btn {
  background: #1989fa;
  color: #fff;
}

.location-wrap {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-btn {
  font-size: 24rpx;
  color: #1989fa;
  padding: 4rpx 16rpx;
  background: rgba(25, 137, 250, 0.1);
  border-radius: 4rpx;
}

.photo-row {
  align-items: flex-start;
}

.customer-photos {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.customer-photos image {
  width: 100%;
  height: 140rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.model-no-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.model-input {
  flex: 1;
}

.no-input {
  flex: 1;
}

.separator {
  color: #999;
  font-size: 28rpx;
}

.engineers-wrap {
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 16rpx;
  min-height: 80rpx;
}

.engineers-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.engineer-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 26rpx;
}

.engineer-tag:first-child {
  color: #1989fa;
  background: rgba(25, 137, 250, 0.1);
}

.add-engineer {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #fff;
  border-radius: 4rpx;
}

.add-text {
  font-size: 26rpx;
  color: #666;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.modal-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #1989fa;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin: 0;
}

.picker-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.picker-arrow {
  color: #999;
  font-size: 28rpx;
}

.placeholder {
  color: #999;
} 